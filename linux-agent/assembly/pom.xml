<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>c8y.example</groupId>
        <artifactId>c8y-lx</artifactId>
        <version>4.9.0-SNAPSHOT</version>
    </parent>

	<artifactId>lx-agent-assembly</artifactId>
    <name>Cumulocity :: Examples :: Linux Agent Assembly</name>
	<description>Build profiles for various environments</description>
	<packaging>pom</packaging>

	<dependencies>
		<dependency>
			<groupId>c8y.example</groupId>
			<artifactId>lx-agent</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>kontron-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.example</groupId>
					<artifactId>kontron-driver</artifactId>
                    <version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>mac-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.example</groupId>
					<artifactId>mac-driver</artifactId>
                    <version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>piface-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.example</groupId>
					<artifactId>piface-driver</artifactId>
                    <version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>rpi-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.example</groupId>
					<artifactId>rpi-driver</artifactId>
                    <version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>tinkerforge-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.example</groupId>
					<artifactId>tinkerforge-driver</artifactId>
                    <version>${project.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<configuration>
				    <finalName>lx-agent-${project.version}</finalName>
					<descriptors>
						<descriptor>assembly.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
