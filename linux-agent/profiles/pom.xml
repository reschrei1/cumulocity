<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>c8y.lx</groupId>
		<artifactId>lx</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>profiles</artifactId>
	<name>Profiles</name>
	<description>Build profiles for various environments</description>
	<packaging>pom</packaging>

	<profiles>
		<profile>
			<id>lx-agent</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>lx-agent</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>kontron-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>kontron-driver</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>mac-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>mac-driver</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>piface-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>piface-driver</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>rpi-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>rpi-driver</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>tinkerforge-driver</id>
			<dependencies>
				<dependency>
					<groupId>c8y.lx</groupId>
					<artifactId>tinkerforge-driver</artifactId>
					<version>${lx.version}</version>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<descriptors>
						<descriptor>assembly.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
