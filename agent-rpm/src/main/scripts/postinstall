# stop karaf service
service cumulocity-demo-karaf stop
sleep 5

# modify org.apache.karaf.features.cfg file (add bundle information)
sed -i '/cumulocity-demo,/ a\cumulocity-mps-agent,\\' /usr/share/cumulocity-demo-karaf/etc/org.apache.karaf.features.cfg
sed -i '/cumulocity-demo-feature.xml/ a\file:system/mps-agent-feature.xml,\\' /usr/share/cumulocity-demo-karaf/etc/org.apache.karaf.features.cfg

# start karaf service
service cumulocity-demo-karaf start
sleep 5
