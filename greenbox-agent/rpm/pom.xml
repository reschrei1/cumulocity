<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>c8y.example</groupId>
		<artifactId>greenbox-agent</artifactId>
		<version>5.12.0</version>
	</parent>

	<artifactId>greenbox-agent-package</artifactId>
	<packaging>rpm</packaging>
	<name>Cumulocity :: Examples :: GreenBox Agent :: RPM</name>

	<properties>
		<package.name>greenbox-agent-server</package.name>
		<app.dir>${project.build.directory}/app</app.dir>
		<bin.dir>src/rpm/bin</bin.dir>
		<etc.dir>src/rpm/etc</etc.dir>
		<systemd.dir>src/rpm/systemd</systemd.dir>
		<init-d.dir>src/rpm/init.d</init-d.dir>
		<rpm.version>${project.version}</rpm.version>
		<rpm.app.dir>/usr/share/${package.name}</rpm.app.dir>
		<rpm.etc.dir>/etc/greenbox</rpm.etc.dir>
		<rpm.systemd.dir>/usr/lib/systemd/system</rpm.systemd.dir>
		<rpm.init-d.dir>/etc/init.d</rpm.init-d.dir>
	</properties>


	<build>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/rpm</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-rpm-contents</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>greenbox-agent-server</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<outputDirectory>${app.dir}</outputDirectory>
									<destFileName>${package.name}.jar</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<name>${package.name}</name>
					<group>C8Y/Agent</group>
					<copyright>(C) 2013 Cumulocity GmbH</copyright>
					<distribution>Cumulocity 2043</distribution>
					<packager>Cumulocity</packager>
					<requires>
						<require>java &gt; 1.7</require>
					</requires>
					<mappings>
						<mapping>
							<directory>${rpm.app.dir}</directory>
							<username>root</username>
							<groupname>java</groupname>
							<filemode>755</filemode>
							<sources>
								<source>
									<location>${app.dir}</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${rpm.app.dir}</directory>
							<username>root</username>
							<groupname>java</groupname>
							<filemode>755</filemode>
							<sources>
								<source>
									<location>${bin.dir}</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${rpm.systemd.dir}</directory>
							<directoryIncluded>false</directoryIncluded>
							<filemode>755</filemode>
							<configuration>true</configuration>
							<sources>
								<source>
									<location>${systemd.dir}</location>
									<includes>
										<include>${package.name}.service</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${rpm.init-d.dir}</directory>
							<directoryIncluded>false</directoryIncluded>
							<filemode>755</filemode>
							<configuration>true</configuration>
							<sources>
								<source>
									<location>${init-d.dir}</location>
									<includes>
										<include>${package.name}</include>
									</includes>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>${rpm.etc.dir}</directory>
							<directoryIncluded>false</directoryIncluded>
							<filemode>755</filemode>
							<configuration>true</configuration>
							<sources>
								<source>
									<location>${etc.dir}</location>
									<includes>
										<include>${package.name}.properties</include>
										<include>${package.name}.xml</include>
									</includes>
								</source>
							</sources>
						</mapping>
					</mappings>
					<preinstallScriptlet>
						<script>echo "Installing ${project.artifactId}
							${project.version}..."</script>
					</preinstallScriptlet>
					<postremoveScriptlet>
						<script>echo "${project.artifactId} ${project.version} has been
							removed."</script>
					</postremoveScriptlet>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

